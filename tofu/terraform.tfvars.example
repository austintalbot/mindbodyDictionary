# Example Terraform Variables File
# Copy this to your environment-specific .tfvars file and fill in the values

# Core Configuration
project_name = "mbd"
environment  = "dev"  # dev, staging, or prod
location     = "East US"

tags = {
  Project     = "MindBodyDictionary"
  Environment = "Development"
  ManagedBy   = "OpenTofu"
}

# Storage Configuration
storage_account_tier     = "Standard"
storage_replication_type = "LRS"
storage_containers       = ["deployments", "backups", "uploads"]
storage_queues          = ["notifications", "tasks", "deadletter"]
storage_tables          = ["sessions", "metadata", "devicetokens"]

# CosmosDB Configuration
cosmosdb_kind              = "GlobalDocumentDB"  # or "MongoDB"
cosmosdb_database_name     = "main"
cosmosdb_consistency_level = "Session"
cosmosdb_throughput        = 400

# Example SQL containers (if using GlobalDocumentDB)
cosmosdb_sql_containers = {
  users = {
    partition_key_path = "/userId"
    throughput         = 400
  }
}

# Function App Configuration
function_app_sku             = "Y1"  # Y1 (Consumption), B1-B3 (Basic), S1-S3 (Standard)
enable_function_staging_slot = true

# Monitoring Configuration
log_retention_days = 30

# Notification Hub Configuration
enable_notification_hub = false
notification_hub_name   = "notifications"
notification_hub_sku    = "Free"  # Free, Basic, or Standard

# FCM/APNS Configuration - use GitHub secrets or environment variables
