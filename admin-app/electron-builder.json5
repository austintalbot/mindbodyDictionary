// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.austintalbot.mbdadmin",
  "asar": true,
  "productName": "mbd-admin",
  "publish": {
    "provider": "github",
    "owner": "austintalbot",
    "repo": "mindbodyDictionary"
  },
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64", "universal"]
      }
    ],
    "artifactName": "${productName}-Mac-${version}-${arch}.${ext}",
    "identity": null
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "arm64",
          "ia32"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-${arch}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      }
    ],
    "maintainer": "Austin Talbot <austintalbot@gmail.com>",
    "artifactName": "${productName}-Linux-${version}-${arch}.${ext}"
  }
}
