<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonColor}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="TabButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="10,10" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!--  New Button Styles from App.xaml  -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style
        x:Key="SubmitButton"
        BasedOn="{StaticResource PrimaryButton}"
        TargetType="Button">
        <Setter Property="VerticalOptions" Value="End" />
    </Style>

    <Style x:Key="RandomMbdConditionButton" TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="MinimumWidthRequest" Value="44" />
        <Setter Property="Margin" Value="0,10,0,10" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver" />
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!--  New AboutPageActionButton Style  -->
    <Style x:Key="AboutPageActionButton" TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!--  New Button Styles from UpgradePremiumPage.xaml  -->
    <Style x:Key="UpgradePremiumPrimaryButton" TargetType="Button">
        <Setter Property="Padding" Value="15,12" />
    </Style>

    <Style x:Key="UpgradePremiumRestoreButton" TargetType="Button">
        <Setter Property="Padding" Value="15,12" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="UpgradePremiumLegalButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10,8" />
    </Style>

    <Style x:Key="UpgradePremiumDebugCopyButton" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="UpgradePremiumDebugClearButton" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!--  New SubscribeTodayPageSubscribeButton Style  -->
    <Style
        x:Key="SubscribeTodayPageSubscribeButton"
        BasedOn="{StaticResource SubmitButton}"
        TargetType="Button">
        <!--  Text is "Subscribe!" and Clicked is handled in code-behind  -->
    </Style>

    <!--  New DisclaimerPopupButton Style  -->
    <Style x:Key="DisclaimerPopupButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!--  New Button Styles from ImageCachePage.xaml  -->
    <Style x:Key="ImageCacheActionButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style x:Key="ImageCacheDebugButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Red" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style
        x:Key="ImageCacheDebugCopyButton"
        BasedOn="{StaticResource ImageCacheDebugButton}"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="Orange" />
    </Style>

    <!--  New Button Styles from ManageMetaPage.xaml  -->
    <Style x:Key="MetaDeleteButtonStyle" TargetType="Button">
        <Setter Property="ImageSource" Value="{StaticResource IconDelete}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="MetaSaveButtonStyle" TargetType="Button">
        <Setter Property="Text" Value="Save" />
        <Setter Property="MinimumHeightRequest" Value="{OnIdiom 44, Desktop=60}" />
    </Style>

    <Style x:Key="MetaAddButtonStyle" TargetType="Button">
        <Setter Property="ImageSource" Value="{StaticResource IconAdd}" />
    </Style>

    <Style x:Key="AddButtonStyle" TargetType="Button">
        <Setter Property="ImageSource" Value="{StaticResource IconAdd}" />
    </Style>
    <!--  New ProjectDetailSaveButton Style  -->
    <Style x:Key="ProjectDetailSaveButton" TargetType="Button">
        <Setter Property="Text" Value="Save" />
        <Setter Property="MinimumHeightRequest" Value="{OnIdiom 44, Desktop=60}" />
    </Style>

    <!--  New TaskDetailSaveButton Style  -->
    <Style x:Key="TaskDetailSaveButton" TargetType="Button">
        <Setter Property="MinimumHeightRequest" Value="{OnIdiom 44, Desktop=60}" />
        <Setter Property="Text" Value="Save" />
    </Style>
</ResourceDictionary>
