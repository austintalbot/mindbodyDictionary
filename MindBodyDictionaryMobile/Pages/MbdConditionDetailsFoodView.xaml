<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsFoodView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:f="clr-namespace:Fonts"
    xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    x:Name="this"
    x:DataType="vm:RecommendationsPageModel">
    <CollectionView
        x:Name="FoodCollectionView"
        EmptyView="There are no corresponding foods for this Condition"
        HeightRequest="{Binding FoodListHeight}"
        ItemsSource="{Binding FoodList}"
        Style="{StaticResource VerticalCollectionView}">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border x:DataType="model:Recommendation" Style="{StaticResource FoodItemBorder}">
                    <VerticalStackLayout Padding="10">
                        <Label
                            Style="{StaticResource FoodItemLabel}"
                            Text="{Binding Name}"
                            Margin="0,0,0,5" />
                        <Button
                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecommendationsPageModel}}, Path=AddToMyListCommand}"
                            CommandParameter="{Binding .}"
                            Text="Add to List"
                            Style="{StaticResource AccentButton}" />
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
