<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsFoodView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:f="clr-namespace:Fonts"
    xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    x:Name="this"
    x:DataType="vm:RecommendationsPageModel">
    <Grid RowDefinitions="*">
        <CollectionView
            x:Name="FoodCollectionView"
            Grid.Row="0"
            EmptyView="There are no corresponding foods for this Condition"
            ItemsSource="{Binding FoodList}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Recommendation">
                    <Border
                        Background="White"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Padding="12"
                        Margin="8"
                        MinimumHeightRequest="100">
                        <VerticalStackLayout Spacing="10" VerticalOptions="Fill">
                            <Label
                                FontSize="14"
                                FontAttributes="Bold"
                                Text="{Binding Name}"
                                LineBreakMode="WordWrap"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Button
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecommendationsPageModel}}, Path=AddToMyListCommand}"
                                CommandParameter="{Binding .}"
                                Text="Add to List"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0"
                                VerticalOptions="End" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
