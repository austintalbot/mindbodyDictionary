<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsFoodView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:f="clr-namespace:Fonts"
    xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    x:Name="this"
    x:DataType="vm:MbdConditionDetailPageModel">
    <Grid RowDefinitions="*">
        <CollectionView
            x:Name="FoodCollectionView"
            Grid.Row="1"
            EmptyView="There are no corresponding foods for this Condition"
            ItemsSource="{Binding FoodList}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Recommendation">
                    <Border
                        Margin="8"
                        Padding="12"
                        Background="{AppThemeBinding Light={StaticResource LightBackground},
                                                     Dark={StaticResource DarkSecondaryBackground}}"
                        MinimumHeightRequest="100"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200},
                                                 Dark={StaticResource Gray600}}"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <VerticalStackLayout Spacing="10" VerticalOptions="Fill">
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                LineBreakMode="WordWrap"
                                Text="{Binding Name}"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                            Dark={StaticResource White}}" />
                            <Button
                                Margin="0"
                                Clicked="OnAddToMyListClicked"
                                CommandParameter="{Binding .}"
                                Style="{StaticResource PrimaryButton}"
                                Text="Add to List"
                                VerticalOptions="End" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
