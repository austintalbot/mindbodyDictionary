<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
             xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
             xmlns:f="clr-namespace:Fonts"
             x:DataType="vm:MbdConditionDetailPageModel"
             x:Name="this"
             x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsFoodView">
      <CollectionView
            x:Name="FoodCollectionView"
            Style="{StaticResource VerticalCollectionView}"
            ItemsSource="{Binding FoodList}"
            EmptyView="There are no corresponding foods for this Condition"
            HeightRequest="{Binding FoodListHeight}">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Style="{StaticResource FoodItemBorder}"
                        x:DataType="model:Recommendation">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Label Style="{StaticResource FoodItemLabel}"
                               Text="{Binding Name}"
                               Grid.Column="0"
                               x:DataType="{x:Type model:Recommendation}" />
                        <Image x:Name="CheckMarkImage"
                               HeightRequest="25"
                               Grid.Column="1"
                               WidthRequest="25">
                            <Image.Source>
                                <FontImageSource Glyph="{x:Static f:FluentUI.checkmark_24_regular}"
                                                 FontFamily="{x:Static f:FluentUI.FontFamily}"
                                                 Color="White" />
                            </Image.Source>
                        </Image>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
