<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsResourcesView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    x:Name="this"
    x:DataType="vm:MbdConditionDetailPageModel">
    <Grid RowDefinitions="*">
        <CollectionView
            x:Name="ResourceCollectionView"
            Grid.Row="1"
            EmptyView="There are no corresponding resources for this Condition"
            ItemsSource="{Binding BooksResourcesList}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Recommendation">
                    <Border
                        Background="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkSecondaryBackground}}"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Padding="12"
                        Margin="8"
                        MinimumHeightRequest="100">
                        <VerticalStackLayout Spacing="10" VerticalOptions="Fill">
                            <Label
                                FontSize="14"
                                FontAttributes="Bold"
                                Text="{Binding Name}"
                                LineBreakMode="WordWrap"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Button
                                IsEnabled="{Binding Url, Converter={StaticResource InverseBoolConverter}}"
                                Command="{Binding ResourceClickedCommand}"
                                CommandParameter="{Binding .}"
                                Text="View Resource"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,0,8"
                                VerticalOptions="End" />
                            <Button
                                Command="{Binding AddToMyListCommand}"
                                CommandParameter="{Binding .}"
                                Text="Add to List"
                                Style="{StaticResource SecondaryButton}"
                                Margin="0"
                                VerticalOptions="End" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
