<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MindBodyDictionaryMobile.Pages.UpgradePremiumPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pageModels="clr-namespace:MindBodyDictionaryMobile.PageModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="{Binding Title}"
    x:DataType="pageModels:UpgradePremiumPageModel"
    BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                      Dark={StaticResource DarkBackground}}"
    InputTransparent="False">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding NavigatedCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <Grid
        BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                          Dark={StaticResource DarkBackground}}"
        InputTransparent="False"
        RowDefinitions="*,Auto">
        <!--  Main Content  -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout
                Margin="{StaticResource LayoutPadding}"
                Spacing="{StaticResource LayoutSpacing}"
                VerticalOptions="Fill">

                <!--  Logo  -->
                <Image
                    Margin="0,20,0,20"
                    Aspect="AspectFit"
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Mind Body Dictionary Logo"
                    Source="mbd_logo.png" />

                <!--  Description  -->
                <Label
                    Margin="0,10,0,5"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Fill"
                    HorizontalTextAlignment="Center"
                    IsVisible="{Binding IsSubscribed, StringFormat='!{0}'}"
                    LineBreakMode="WordWrap"
                    Text="Enjoy an ad free experience while helping support development."
                    TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                Dark={StaticResource LightOnDarkBackground}}" />

                <!--  Terms  -->
                <Label
                    Margin="0,0,0,20"
                    FontSize="14"
                    HorizontalOptions="Fill"
                    HorizontalTextAlignment="Center"
                    IsVisible="{Binding IsSubscribed, StringFormat='!{0}'}"
                    LineBreakMode="WordWrap"
                    Text="No trial period, and the subscription will be renewed automatically on the subscription date, unless canceled before the renewal date."
                    TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                Dark={StaticResource Gray400}}" />

                <!--  Subscription Buttons  -->
                <VerticalStackLayout
                    Padding="0,20,0,0"
                    IsVisible="{Binding IsSubscribed, StringFormat='!{0}'}"
                    Spacing="{StaticResource LayoutSpacing}">
                    <Button
                        Padding="15,12"
                        Command="{Binding PurchaseCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding IsBusy, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Loading...|Subscribe for $9.99/year'}" />

                    <Button
                        Padding="15,12"
                        BackgroundColor="Transparent"
                        BorderColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource Primary}}"
                        BorderWidth="2"
                        Command="{Binding RestoreCommand}"
                        FontAttributes="Bold"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding IsBusy, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Restoring...|Restore Subscription'}"
                        TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource Primary}}" />
                </VerticalStackLayout>

                <!--  Subscription Active Message  -->
                <Border
                    Padding="15"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground},
                                                      Dark={StaticResource DarkSecondaryBackground}}"
                    IsVisible="{Binding IsSubscribed}"
                    Stroke="{StaticResource Primary}"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="2">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Fill"
                        HorizontalTextAlignment="Center"
                        Text="✓ Premium Active"
                        TextColor="{StaticResource Primary}" />
                </Border>

                <!--  Legal Links  -->
                <VerticalStackLayout Padding="0,30,0,0" Spacing="10">
                    <Button
                        Padding="10,8"
                        BackgroundColor="Transparent"
                        Command="{Binding PrivacyCommand}"
                        FontSize="16"
                        Text="Privacy Policy"
                        TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource Primary}}" />

                    <Button
                        Padding="10,8"
                        BackgroundColor="Transparent"
                        Command="{Binding TermsCommand}"
                        CommandParameter="https://www.mindbodydictionary.com/termsandconditions"
                        FontSize="16"
                        Text="Terms of Use"
                        TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource Primary}}" />
                </VerticalStackLayout>

                <!--  Debug Billing Information  -->
                <BoxView
                    Margin="0,20,0,0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray200},
                                                      Dark={StaticResource Gray800}}"
                    HeightRequest="1"
                    IsVisible="{Binding IsDebug}" />

                <Label
                    Margin="0,15,0,10"
                    FontAttributes="Bold"
                    FontSize="14"
                    IsVisible="{Binding IsDebug}"
                    Text="🐛 DEBUG BILLING INFO"
                    TextColor="{StaticResource Primary}" />

                <Border
                    Padding="12"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground},
                                                      Dark={StaticResource DarkSecondaryBackground}}"
                    IsVisible="{Binding IsDebug}"
                    Stroke="{StaticResource Primary}"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="2">
                    <VerticalStackLayout Spacing="10">
                        <Editor
                            x:Name="DebugInfoEditor"
                            BackgroundColor="Transparent"
                            FontFamily="Courier"
                            FontSize="11"
                            HeightRequest="200"
                            IsReadOnly="True"
                            Text="{Binding DebugInfo}"
                            TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                        Dark={StaticResource LightOnDarkBackground}}" />

                        <HorizontalStackLayout Spacing="10">
                            <Button
                                Padding="10,8"
                                Command="{Binding CopyDebugInfoCommand}"
                                FontSize="12"
                                HorizontalOptions="Fill"
                                Text="📋 Copy" />

                            <Button
                                Padding="10,8"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1"
                                Command="{Binding ClearDebugInfoCommand}"
                                FontSize="12"
                                HorizontalOptions="Fill"
                                Text="🗑️ Clear"
                                TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>

                        <Label
                            FontSize="11"
                            Opacity="0.7"
                            Text="This debug section only appears in DEBUG builds. Use Copy to share billing logs."
                            TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                        Dark={StaticResource Gray400}}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!--  Loading Indicator  -->
        <ActivityIndicator
            Grid.Row="0"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            Color="{StaticResource Primary}" />
    </Grid>
</ContentPage>
