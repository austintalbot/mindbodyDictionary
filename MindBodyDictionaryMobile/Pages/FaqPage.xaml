<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MindBodyDictionaryMobile.Pages.FaqPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:pm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    Title="FAQ"
    x:DataType="pm:FaqPageModel">

    <Grid>
        <CollectionView
            AutomationId="FaqCollectionView"
            ItemsSource="{Binding FaqItems}"
            SelectionMode="None">

            <CollectionView.Header>
                <VerticalStackLayout Padding="0,20,0,20">
                    <Image Style="{StaticResource AppLogoImage}" />
                </VerticalStackLayout>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:FaqItem">
                    <VerticalStackLayout Padding="10,5" Spacing="5">
                        <!--  Question Header (Left)  -->
                        <Frame
                            Padding="15,12"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Secondary},
                                                              Dark={StaticResource Gray800}}"
                            BorderColor="Transparent"
                            CornerRadius="20"
                            HasShadow="False"
                            HorizontalOptions="Start"
                            MaximumWidthRequest="300">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleExpandedCommand}" />
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                <Label
                                    Grid.Column="0"
                                    Style="{StaticResource ParagraphLabel}"
                                    Text="{Binding Question}"
                                    TextColor="{AppThemeBinding Light={StaticResource Tertiary},
                                                                Dark={StaticResource Secondary}}" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="18"
                                    Text="▼"
                                    TextColor="{AppThemeBinding Light={StaticResource Tertiary},
                                                                Dark={StaticResource Secondary}}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Frame>

                        <!--  Answer (Right)  -->
                        <Frame
                            Padding="15,12"
                            BackgroundColor="{StaticResource Primary}"
                            BorderColor="Transparent"
                            CornerRadius="20"
                            HasShadow="False"
                            HorizontalOptions="End"
                            IsVisible="{Binding IsExpanded}"
                            MaximumWidthRequest="300">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontAttributes="Bold"
                                    Style="{StaticResource ParagraphLabel}"
                                    Text="{Binding ShortAnswer}"
                                    TextColor="White" />
                                <Label
                                    Style="{StaticResource ParagraphLabel}"
                                    Text="{Binding Answer}"
                                    TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>
