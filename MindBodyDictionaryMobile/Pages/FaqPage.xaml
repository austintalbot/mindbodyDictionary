<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MindBodyDictionaryMobile.Pages.FaqPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:pm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    Title="FAQ"
    x:DataType="pm:FaqPageModel">

    <Grid>
        <CollectionView
            AutomationId="FaqCollectionView"
            ItemsSource="{Binding FaqItems}"
            SelectionMode="None">
            
            <CollectionView.Header>
                <VerticalStackLayout Padding="0,20,0,20">
                    <Image Style="{StaticResource AppLogoImage}" />
                </VerticalStackLayout>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:FaqItem">
                    <VerticalStackLayout Padding="10,5" Spacing="5">
                        <!--  Question Header (Left)  -->
                        <Frame HorizontalOptions="Start"
                               BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray800}}"
                               CornerRadius="20"
                               Padding="15,12"
                               HasShadow="False"
                               BorderColor="Transparent"
                               MaximumWidthRequest="300">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleExpandedCommand}" />
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                <Label Grid.Column="0" 
                                       Text="{Binding Question}" 
                                       Style="{StaticResource ParagraphLabel}"
                                       TextColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource Secondary}}" />
                                <Label Grid.Column="1" 
                                       Text="â–¼"
                                       FontSize="18"
                                       TextColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource Secondary}}"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Frame>

                        <!--  Answer (Right)  -->
                        <Frame HorizontalOptions="End"
                               IsVisible="{Binding IsExpanded}"
                               BackgroundColor="{StaticResource Primary}"
                               CornerRadius="20"
                               Padding="15,12"
                               HasShadow="False"
                               BorderColor="Transparent"
                               MaximumWidthRequest="300">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding ShortAnswer}" 
                                       Style="{StaticResource ParagraphLabel}"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding Answer}" 
                                       Style="{StaticResource ParagraphLabel}"
                                       TextColor="White" />
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
    </Grid>
</ContentPage>

