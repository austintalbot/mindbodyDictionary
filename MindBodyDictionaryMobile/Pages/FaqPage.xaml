<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    x:DataType="pm:FaqPageModel"
    x:Class="MindBodyDictionaryMobile.Pages.FaqPage"
    Title="FAQ">

    <CollectionView ItemsSource="{Binding FaqItems}" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="pm:FaqItem">
                <VerticalStackLayout Style="{StaticResource FaqItemVerticalStackLayout}">
                    <Frame Style="{StaticResource FaqItemFrameStyle}">
                        <VerticalStackLayout Style="{StaticResource FaqItemContentVerticalStackLayout}">
                            <!-- Question Header -->
                            <Label Text="{Binding Question}" Style="{StaticResource FaqQuestionLabelStyle}"/>

                            <!-- Answer (Expandable) -->
                            <Label Text="{Binding Answer}" Style="{StaticResource FaqAnswerLabelStyle}"/>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
