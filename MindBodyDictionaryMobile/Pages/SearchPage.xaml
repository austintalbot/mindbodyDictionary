<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MindBodyDictionaryMobile.Pages.SearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:shimmer="clr-namespace:Syncfusion.Maui.Toolkit.Shimmer;assembly=Syncfusion.Maui.Toolkit"
    xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    Title="{Binding Title}"
    x:DataType="vm:SearchPageModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding RefreshConditionsCommand}"
            IconImageSource="{StaticResource IconRefresh}"
            Text="Refresh" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Style="{StaticResource MainPageGrid}">
        <!--  Subscription Status Banner  -->
        <Border
            Grid.Row="0"
            Margin="10,10,10,0"
            BackgroundColor="{Binding IsSubscriptionActive, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Green|Gray'}"
            IsVisible="{Binding IsSubscriptionActive, Converter={StaticResource InverseBoolConverter}}"
            Padding="10"
            StrokeShape="RoundRectangle 8">
            <Label
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="{Binding SubscriptionStatusMessage}"
                TextColor="White" />
        </Border>

        <!--  Search Bar  -->
        <SearchBar
            x:Name="MbdConditionSearchBar"
            Grid.Row="1"
            android:Entry.ImeOptions="Done"
            AutomationId="MbdConditionSearchBar"
            IsTextPredictionEnabled="False"
            SearchCommand="{Binding OnSearchButtonPressedCommand}"
            SearchCommandParameter="{Binding Text, Source={x:Reference MbdConditionSearchBar}}"
            Style="{StaticResource MbdConditionSearchBar}"
            Text="{Binding SearchParam}"
            TextChanged="MbdConditionSearchBar_TextChanged" />

        <!--  Collection View with optimized layout  -->
        <Grid Grid.Row="2">
            <CollectionView
                x:Name="ConditionCollectionView"
                AutomationId="ConditionCollectionView"
                IsVisible="{Binding IsInitialized}"
                ItemsSource="{Binding FilteredConditionCollection}"
                Scrolled="OnCollectionViewScrolled"
                SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="10"
                        VerticalOptions="Center">
                        <Label Style="{StaticResource EmptyViewTitleLabel}" />
                        <Label Style="{StaticResource EmptyViewSubtitleLabel}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        x:Name="CollectionViewGridItemLayout"
                        HorizontalItemSpacing="8"
                        Orientation="Vertical"
                        Span="3"
                        VerticalItemSpacing="8" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:MbdCondition">
                        <Border InputTransparent="False" Style="{StaticResource SearchMbdConditionCard}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnConditionTapped" />
                            </Border.GestureRecognizers>

                            <Grid RowDefinitions="*,Auto">
                                <!--  Lock overlay  -->
                                <Image
                                    Grid.Row="0"
                                    IsVisible="{Binding DisplayLock}"
                                    Opacity="1"
                                    Source="locked_icon.png"
                                    Style="{StaticResource SearchMbdConditionImage}"
                                    ZIndex="1" />

                                <!--  Condition image  -->
                                <Image
                                    Grid.Row="0"
                                    Source="{Binding CachedImageOneSource}"
                                    Style="{StaticResource SearchMbdConditionImage}" />

                                <!--  Condition name  -->
                                <Label
                                    Grid.Row="1"
                                    Style="{StaticResource SearchMbdConditionLabel}"
                                    Text="{Binding Name}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Shimmer loading grid when busy  -->
            <CollectionView
                BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                  Dark={StaticResource DarkBackground}}"
                IsVisible="{Binding IsBusy}"
                Style="{StaticResource SearchGridCollectionView}">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                        <x:String>7</x:String>
                        <x:String>8</x:String>
                        <x:String>9</x:String>
                        <x:String>10</x:String>
                        <x:String>11</x:String>
                        <x:String>12</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        x:Name="ShimmerGridItemsLayout"
                        HorizontalItemSpacing="6"
                        Orientation="Vertical"
                        Span="3"
                        VerticalItemSpacing="6" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <shimmer:SfShimmer
                            IsActive="True"
                            WaveColor="{StaticResource Primary}">
                            <shimmer:SfShimmer.CustomView>
                                <Border Style="{StaticResource SearchMbdConditionCard}">
                                    <Grid Padding="0" RowDefinitions="*,Auto">
                                        <!--  Image placeholder  -->
                                        <Border
                                            Grid.Row="0"
                                            Margin="0,10,0,0"
                                            HeightRequest="100"
                                            HorizontalOptions="Center"
                                            Style="{StaticResource ShimmerPlaceholderBorder}"
                                            VerticalOptions="Start"
                                            WidthRequest="100">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                        </Border>

                                        <!--  Text placeholder  -->
                                        <Border
                                            Grid.Row="1"
                                            Margin="0,8,0,10"
                                            HeightRequest="20"
                                            HorizontalOptions="Center"
                                            Style="{StaticResource ShimmerPlaceholderBorder}"
                                            WidthRequest="80" />
                                    </Grid>
                                </Border>
                            </shimmer:SfShimmer.CustomView>
                        </shimmer:SfShimmer>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
