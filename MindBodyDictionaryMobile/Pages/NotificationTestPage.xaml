<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindBodyDictionaryMobile.Pages.NotificationTestPage"
             Title="Notification Test">
    <VerticalStackLayout Style="{StaticResource NotificationTestPageContainerStyle}">
        <Label Style="{StaticResource NotificationTestHeaderLabel}"/>

        <Button x:Name="TestLocalNotificationBtn"
                AutomationId="TestLocalNotificationButton"
                Clicked="OnTestLocalNotificationClicked"
                Style="{StaticResource NotificationTestLocalButton}"/>

        <Frame Style="{StaticResource NotificationTestInstructionsFrame}">
            <VerticalStackLayout Style="{StaticResource NotificationTestInstructionsLayout}">
                <Label Style="{StaticResource NotificationTestInstructionsTitleLabel}"/>
                <Label Text="1. Click 'Send Test Local Notification'" Style="{StaticResource NotificationTestInstructionsStepLabel}"/>
                <Label Text="2. Wait 5 seconds for notification to appear" Style="{StaticResource NotificationTestInstructionsStepLabel}"/>
                <Label Text="3. Check Xcode console for debug output" Style="{StaticResource NotificationTestInstructionsStepLabel}"/>
                <Label Text="4. For remote APNS testing, use: xcrun simctl push booted com.minbodydictionary.mindbodydictionarymobile payload.apns" Style="{StaticResource NotificationTestInstructionsStepLabel}"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
