<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MindBodyDictionaryMobile.Pages.TaskDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:pageModel="clr-namespace:MindBodyDictionaryMobile.PageModels"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
    Title="Task"
    x:DataType="pageModel:TaskDetailPageModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding DeleteCommand}"
            IconImageSource="{StaticResource IconDelete}"
            Order="Primary"
            Priority="0"
            SemanticProperties.Description="Delete Task"
            Text="Delete" />
    </ContentPage.ToolbarItems>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="{StaticResource LayoutPadding}" Spacing="{StaticResource LayoutSpacing}">
                <sf:SfTextInputLayout Hint="Task">
                    <Entry SemanticProperties.Description="Task" Text="{Binding Title}" />
                </sf:SfTextInputLayout>

                <sf:SfTextInputLayout Hint="Completed">
                    <CheckBox
                        IsChecked="{Binding IsCompleted}"
                        SemanticProperties.Description="Completed"
                        SemanticProperties.Hint="Indicates if this task is completed"
                        Style="{StaticResource TaskDetailCheckBoxStyle}" />
                </sf:SfTextInputLayout>

                <sf:SfTextInputLayout
                    Hint="Project"
                    IsVisible="{Binding IsExistingProject}"
                    SemanticProperties.Description="ComboBox to select Project"
                    SemanticProperties.Hint="State Collapsed">
                    <Picker
                        ItemDisplayBinding="{Binding Name, x:DataType=models:Project}"
                        ItemsSource="{Binding Projects}"
                        SelectedIndex="{Binding SelectedProjectIndex}"
                        SelectedItem="{Binding Project}"
                        SemanticProperties.Description="Project State Expanded"
                        SemanticProperties.Hint="Which project this task belongs to" />
                </sf:SfTextInputLayout>

                <Button Command="{Binding SaveCommand}" Style="{StaticResource TaskDetailSaveButton}" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
