<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
             xmlns:local="clr-namespace:MindBodyDictionaryMobile.Converter"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MindBodyDictionaryMobile.Pages.ImageCachePage"
             x:DataType="vm:ImageCachePageModel"
             Title="Image Cache (Debug)">



    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Style="{StaticResource ImageCacheHeaderLabel}" />

            <!-- Status Message -->
            <Border Style="{StaticResource ImageCacheStatusBorder}">
                <Label Text="{Binding StatusMessage}" Style="{StaticResource ImageCacheStatusLabel}" />
            </Border>

            <!-- Cache Statistics -->
            <Border Style="{StaticResource ImageCacheStatusBorder}">
                <VerticalStackLayout Spacing="12">
                    <Label Style="{StaticResource ImageCacheSummaryHeaderLabel}" />

                    <VerticalStackLayout Style="{StaticResource ImageCacheDebugStatsLayout}">
                        <Label Text="{Binding TotalImagesInResources, StringFormat='DEBUG TotalImagesInResources: {0}'}" Style="{StaticResource ImageCacheDebugStatLabel}" />
                        <Label Text="{Binding CachedImages, StringFormat='DEBUG CachedImages: {0}'}" Style="{StaticResource ImageCacheDebugStatLabel}" />
                        <Label Text="{Binding PercentageCached, StringFormat='DEBUG PercentageCached: {0}'}" Style="{StaticResource ImageCacheDebugStatLabel}" />
                        <Label Text="{Binding TotalCacheSize, StringFormat='DEBUG TotalCacheSize: {0}'}" Style="{StaticResource ImageCacheDebugStatLabel}" />
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="10">

                        <Label Text="Images in Resources:" Style="{StaticResource ImageCacheStatTitleLabel}" Grid.Row="0" Grid.Column="0" />
                        <Label Text="{Binding TotalImagesInResources}" Style="{StaticResource ImageCacheStatValueLabel}" Grid.Row="0" Grid.Column="1" />

                        <Label Text="Cached Images:" Style="{StaticResource ImageCacheStatTitleLabel}" Grid.Row="1" Grid.Column="0" />
                        <Label Text="{Binding CachedImages}" Style="{StaticResource ImageCacheStatValueLabel}" Grid.Row="1" Grid.Column="1" />

                        <Label Text="Cache Percentage:" Style="{StaticResource ImageCacheStatTitleLabel}" Grid.Row="2" Grid.Column="0" />
                        <Label Text="{Binding PercentageCached, StringFormat='{0}%'}" Style="{StaticResource ImageCacheStatValueLabel}" Grid.Row="2" Grid.Column="1" />

                        <Label Text="Total Cache Size:" Style="{StaticResource ImageCacheStatTitleLabel}" Grid.Row="3" Grid.Column="0" />
                        <Label Text="{Binding TotalCacheSize, Converter={StaticResource BytesToFormattedSizeConverter}}" Style="{StaticResource ImageCacheStatValueLabel}" Grid.Row="3" Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="10">
                <Button Text="Refresh Cache from Resources"
                        AutomationId="RefreshCacheButton"
                        Command="{Binding RefreshCacheCommand}"
                        Style="{StaticResource ImageCacheActionButton}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}" />

                <Button Text="Clear Cache"
                        AutomationId="ClearCacheButton"
                        Command="{Binding ClearCacheCommand}"
                        Style="{StaticResource ImageCacheActionButton}"
                        BackgroundColor="{StaticResource Secondary}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}" />

                <Button Text="Reload Stats"
                        AutomationId="ReloadStatsButton"
                        Command="{Binding LoadCacheStatsCommand}"
                        Style="{StaticResource ImageCacheActionButton}"
                        BackgroundColor="{StaticResource Tertiary}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}" />
            </VerticalStackLayout>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Style="{StaticResource ImageCacheLoadingIndicator}" />

            <!-- Cached Images List -->
            <Label Style="{StaticResource ImageCacheListHeaderLabel}"
                   IsVisible="{Binding CachedImagesList, Converter={StaticResource IsNotNullOrEmptyConverter}}" />

            <Label Text="{Binding CachedImagesList.Count, StringFormat='Total items in list: {0}'}"
                   Style="{StaticResource ImageCacheListCountLabel}" />

            <CollectionView ItemsSource="{Binding CachedImagesList}"
                           IsVisible="{Binding CachedImagesList, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ImageCacheListItemBorder}">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding FileName}" Style="{StaticResource ImageCacheListItemFileNameLabel}" />
                                <Label Text="{Binding ContentType, StringFormat='Type: {0}'}" Style="{StaticResource ImageCacheListItemDetailLabel}" />
                                <Label Text="{Binding SizeKb, StringFormat='Size: {0:F2} KB'}" Style="{StaticResource ImageCacheListItemDetailLabel}" />
                                <Label Text="{Binding CachedAt, StringFormat='Cached: {0:G}'}" Style="{StaticResource ImageCacheListItemCachedAtLabel}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Debug Info Section -->
            <Border Style="{StaticResource ImageCacheDebugInfoBorder}">
                <VerticalStackLayout Spacing="12">
                    <Label Style="{StaticResource ImageCacheDebugInfoHeaderLabel}" />

                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding DebugResourcesFound, StringFormat='Manifest Resources Found: {0}'}" Style="{StaticResource ImageCacheDebugStatItemLabel}" />
                        <Label Text="{Binding DebugImagesInResources, StringFormat='Images in Resources: {0}'}" Style="{StaticResource ImageCacheDebugStatItemLabel}" />
                        <Label Text="{Binding DebugCachedCount, StringFormat='Images in Cache DB: {0}'}" Style="{StaticResource ImageCacheDebugStatItemLabel}" />
                        <Label Text="{Binding DebugCacheDbPath, StringFormat='Cache DB Path: {0}'}" Style="{StaticResource ImageCacheDebugPathLabel}" />
                    </VerticalStackLayout>

                    <Button Text="Load Debug Info"
                            Command="{Binding LoadDebugInfoCommand}"
                            Style="{StaticResource ImageCacheDebugButton}" />

                    <Button Text="Copy Debug Info"
                            Command="{Binding CopyDebugInfoCommand}"
                            Style="{StaticResource ImageCacheDebugCopyButton}" />

                    <ScrollView HeightRequest="150">
                        <Label Text="{Binding DebugLog}" Style="{StaticResource ImageCacheDebugLogLabel}" />
                    </ScrollView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
