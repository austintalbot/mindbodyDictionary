<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindBodyDictionaryMobile.Pages.SubscribeTodayPage">
        <VerticalStackLayout Style="{StaticResource SubscribeTodayPageContainerStyle}">
            <VerticalStackLayout.GestureRecognizers>
                   <TapGestureRecognizer
                        NumberOfTapsRequired="1"
                        Tapped="TapGestureRecognizer_Tapped"
                         />
            </VerticalStackLayout.GestureRecognizers>
            <Image Style="{StaticResource SubscribeTodayPageLockImage}" />
            <Label Style="{StaticResource SubscribeTodayPageMessageLabel}"
                Text="Subscribe to remove ads and gain access to this and more content!" />

            <Button
                x:Name="SubscribeButton"
                Clicked="SubscribeButton_Clicked"
                Style="{StaticResource SubscribeTodayPageSubscribeButton}"
                Text="Subscribe!" />
        </VerticalStackLayout>
</ContentView>
