<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsProductsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    x:Name="this"
    x:DataType="vm:RecommendationsPageModel">
    <Grid RowDefinitions="auto,*">
        <Label
            Grid.Row="0"
            Text="{Binding ProductCount, StringFormat='Products: {0}'}"
            FontSize="14"
            FontAttributes="Bold"
            Padding="12"
            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
        <CollectionView
            x:Name="ProductCollectionView"
            Grid.Row="1"
            EmptyView="There are no corresponding products for this Condition"
            ItemsSource="{Binding ProductList}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Recommendation">
                    <Border
                        Background="White"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Padding="12"
                        Margin="8"
                        MinimumHeightRequest="100">
                        <VerticalStackLayout Spacing="10" VerticalOptions="Fill">
                            <Label
                                FontSize="14"
                                FontAttributes="Bold"
                                Text="{Binding Name}"
                                LineBreakMode="WordWrap"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Button
                                IsEnabled="{Binding Url, Converter={StaticResource InverseBoolConverter}}"
                                Command="{Binding ProductClickedCommand}"
                                CommandParameter="{Binding .}"
                                Text="View Product"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,0,8"
                                VerticalOptions="End" />
                            <Button
                                Command="{Binding AddToMyListCommand}"
                                CommandParameter="{Binding .}"
                                Text="Add to List"
                                Style="{StaticResource SecondaryButton}"
                                Margin="0"
                                VerticalOptions="End" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
