<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
             xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
             x:DataType="vm:MbdConditionDetailPageModel"
             x:Name="this"
             x:Class="MindBodyDictionaryMobile.Pages.MbdConditionDetailsProblemView">

    <Grid Padding="0"
        VerticalOptions="Fill"
        HorizontalOptions="Fill">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <!--Problem Header-->
    <VerticalStackLayout Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
        <Image x:Name="ProblemsMindBodyLogo"
                Source="mbd_icon.png"
                MaximumHeightRequest="100"></Image>
        <Label Text="Mindsets for"
                TextColor="{StaticResource MbdConditionTextColor}"
                HorizontalOptions="Center"
                FontSize="16" />
        <Label Text="{Binding Condition.Name}"
                TextColor="{StaticResource MbdConditionTextColor}"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                Padding="0,0,0,10" />
    </VerticalStackLayout>
    <Border Margin="10"
        Grid.Row="1"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        HorizontalOptions="Fill"
        Stroke="{StaticResource MbdConditionCardBorder}"
        StrokeThickness="1"
        Background="White"
        VerticalOptions="Fill">
    <Border.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_NegativeMbdConditionTap"
                              CommandParameter="{Binding Condition.Id}"></TapGestureRecognizer>
    </Border.GestureRecognizers>
    <Grid HorizontalOptions="Fill"
            VerticalOptions="Fill">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Image Grid.Column="0"
                x:Name="NegativeImage"
                Aspect="AspectFit"
                VerticalOptions="Center"
                Source="{Binding Condition.CachedImageOneSource}" />
        <Label x:Name="NegativeMindsetLabel"
                Grid.Column="0"
                Grid.Row="1"
                FontSize="12"
                Text="Troubled Mindset"
                TextColor="{StaticResource MbdConditionTextColor}" />

        <Label x:Name="NegativeLabel"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.Row="0"
               Grid.RowSpan="2"
               Margin="5"
               FontSize="18"
               TextColor="Black"
               Text="{Binding Condition.SummaryNegative}"
               HorizontalTextAlignment="Start"
               HorizontalOptions="Start"
               VerticalOptions="Fill"
               MaxLines="6"
               LineBreakMode="TailTruncation" />
    </Grid>
    </Border>

    <Border Margin="10"
        HorizontalOptions="Fill"
        VerticalOptions="Fill"
        Grid.Row="2"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Stroke="{StaticResource MbdConditionCardBorder}"
        StrokeThickness="1"
        Background="White">
    <Border.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_HealingMbdConditionTap"
                              CommandParameter="{Binding Condition.Id}"></TapGestureRecognizer>
    </Border.GestureRecognizers>
    <Grid HorizontalOptions="Fill"
            VerticalOptions="Fill">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Image x:Name="PositiveImage"
                Grid.Column="3"
                Grid.Row="0"
                Aspect="AspectFit"
                VerticalOptions="Center"
                Source="{Binding Condition.CachedImageTwoSource}" />
        <Label x:Name="PositiveMindsetLabel"
                Grid.Column="3"
                Grid.Row="1"
                FontSize="12"
                Text="Healing Mindset"
                TextColor="{StaticResource MbdConditionTextColor}" />
        <Label Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Grid.RowSpan="2"
                x:Name="PositiveLabel"
                Margin="5"

                Text="{Binding Condition.SummaryPositive}"
                HorizontalTextAlignment="Start"
                TextColor="Black"
                HorizontalOptions="End"
                VerticalOptions="Fill"
                MaxLines="6"
                FontSize="18"
                LineBreakMode="TailTruncation" />
            </Grid>
        </Border>
    </Grid>
</ContentView>
