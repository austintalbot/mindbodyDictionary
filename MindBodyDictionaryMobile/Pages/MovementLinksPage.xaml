<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MindBodyDictionaryMobile.Pages.MovementLinksPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MindBodyDictionaryMobile.Models"
    xmlns:pm="clr-namespace:MindBodyDictionaryMobile.PageModels"
    Title="MindBody Movement"
    x:DataType="pm:MovementLinksPageModel">

    <Grid>
        <CollectionView
            AutomationId="MovementLinksCollectionView"
            ItemsSource="{Binding Links}"
            SelectionMode="None">

            <CollectionView.Header>
                <VerticalStackLayout Padding="0,20,0,20">
                    <Image Style="{StaticResource AppLogoImage}" />
                    <Label
                        Margin="0,10,0,0"
                        HorizontalOptions="Center"
                        Style="{StaticResource SubHeadline}"
                        Text="MindBody Movement Resources" />
                </VerticalStackLayout>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MovementLink">
                    <VerticalStackLayout Padding="20,10">
                        <Button
                            Command="{Binding Source={RelativeSource AncestorType={x:Type pm:MovementLinksPageModel}}, Path=OpenLinkCommand}"
                            CommandParameter="{Binding .}"
                            Style="{StaticResource PrimaryButton}"
                            Text="{Binding Title}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>
