<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MindBodyDictionaryMobile.PageModels"
             xmlns:model="clr-namespace:MindBodyDictionaryMobile.Models"
             xmlns:fonts="clr-namespace:Fonts;assembly=MindBodyDictionaryMobile"
             x:DataType="vm:RecommendationsPageModel"
             x:Name="this"
             x:Class="MindBodyDictionaryMobile.Pages.ConditionDetailsFoodView">
      <CollectionView
            x:Name="FoodCollectionView"
            Style="{StaticResource VerticalCollectionView}"
            ItemsSource="{Binding FoodList}"
            EmptyView="There are no corresponding foods for this Condition"
            HeightRequest="{Binding FoodListHeight}">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Style="{StaticResource FoodItemBorder}"
                        x:DataType="model:Recommendation">
                    <Grid RowDefinitions="*,Auto" Padding="10">
                        <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding Name}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="StartAndExpand"
                                   Style="{StaticResource RecommendationNameLabel}"/>
                            <Image x:Name="CheckMarkImage"
                                   HeightRequest="25"
                                   Source="{FontImageSource FontFamily={x:Static fonts:FluentUI.FontFamily}, Glyph={x:Static fonts:FluentUI.checkmark_24_regular}, Size=24, Color=White }"
                                   WidthRequest="25"
                                   VerticalOptions="Center"/>
                        </StackLayout>
                        <Button Grid.Row="1"
                                Text="Add to List"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecommendationsPageModel}}, Path=AddToMyListCommand}"
                                CommandParameter="{Binding .}"
                                Style="{StaticResource AccentButton}"
                                Margin="0,10,0,0"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
