<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:MindBodyDictionaryMobile.PageModels"
             xmlns:models="clr-namespace:MindBodyDictionary.Shared.Entities"
             xmlns:controls="clr-namespace:MindBodyDictionaryMobile.Pages.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MindBodyDictionaryMobile.Pages.MbdConditionListPage"
             x:Name="MbdConditionList"
             x:DataType="pageModels:MbdConditionListPageModel"
             Title="mbdConditions">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference MbdConditionList}, x:DataType=ContentPage}"
            Command="{Binding AppearingCommand}"/>
    </ContentPage.Behaviors>
    <VerticalStackLayout>
            <!-- Debug: Show all condition names -->
            <Label Text="{Binding ConditionNamesDebug}" TextColor="Red" FontSize="Small" Margin="10,0,10,0" />
        <Frame
            Margin="10"
            Padding="10"
            BorderColor="{DynamicResource Primary}"
            BackgroundColor="{DynamicResource Surface}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ScrollView Grid.Row="0" HeightRequest="200">
                    <StackLayout>
                        <Label Text="Debug Info" FontAttributes="Bold" FontSize="Medium" TextColor="{DynamicResource Primary}" />
                        <Label Text="{Binding ConditionCount, StringFormat='Condition Count: {0}'}" TextColor="{DynamicResource OnSurface}" />
                        <Label Text="{Binding LastSyncTime, StringFormat='Last Sync Time: {0}'}" TextColor="{DynamicResource OnSurface}" />
                        <Label Text="{Binding SyncStatus, StringFormat='Sync Status: {0}'}" TextColor="{DynamicResource OnSurface}" />
                        <Label Text="{Binding ConditionSource, StringFormat='Source: {0}'}" TextColor="{DynamicResource OnSurface}" />
                        <Label Text="{Binding LoadFromApiCommandDetails}" FontSize="Small" TextColor="Gray" Margin="0,5,0,5" />
                        <Label Text="{Binding LastApiResponse}" FontSize="Small" TextColor="{DynamicResource OnSurface}" LineBreakMode="WordWrap" Margin="0,5,0,5" />
                        <!-- Load from API button moved below for always-present access -->
                    </StackLayout>
                </ScrollView>
                <Button Grid.Row="1" Text="Copy" Command="{Binding CopyDebugInfoCommand}" Margin="0,10,0,0" />
            </Grid>
        </Frame>
        <CollectionView ItemsSource="{Binding MbdConditions}"
                       Margin="{StaticResource LayoutPadding}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MbdCondition">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Name}" FontSize="24" />
                        <Label Text="{Binding Description}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Load from API (Debug)" Command="{Binding LoadFromApiCommand}" Margin="10,10,10,0" />
        <controls:AddButton
            Command="{Binding AddmbdConditionCommand}"
            SemanticProperties.Description="Add mbdCondition" />
    </VerticalStackLayout>
</ContentPage>
