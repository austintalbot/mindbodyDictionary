<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="MindBodyDictionaryMobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MindBodyDictionaryMobile.Converter"
    xmlns:f="clr-namespace:Fonts"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/ColorsAndSizes.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/IconStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/LabelStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/LayoutAndCardStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/InputStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/UtilityStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/SearchBarStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/ButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/PageLayoutStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/SearchPageStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/MbdConditionStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/NotificationStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/ImageStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/ImageCacheStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/CollectionStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/ShimmerStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/ProgressStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/SubscriptionStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/TabItemStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Components/LockOverlayStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
            <converters:BoolToRegisteredTextConverter x:Key="BoolToRegisteredTextConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:SelectedTabColorConverter x:Key="SelectedTabColorConverter" />
            <converters:SelectedTabBackgroundColorConverter x:Key="SelectedTabBackgroundColorConverter" />
            <converters:DataLabelValueConverter x:Key="DataLabelValueConverter" />
            <converters:BytesToFormattedSizeConverter x:Key="BytesToFormattedSizeConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
