<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MindBodyDictionaryMobile"
             xmlns:converter="clr-namespace:MindBodyDictionaryMobile.Converter"
             x:Class="MindBodyDictionaryMobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Notification Converters -->
            <converter:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
            <converter:BoolToRegisteredTextConverter x:Key="BoolToRegisteredTextConverter" />
            <converter:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
